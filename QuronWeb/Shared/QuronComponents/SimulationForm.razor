<table class="qc-form ">


    <tr>
        <td>
            <MatSelect Outlined="true" FullWidth="true" Label="Algorithm" @bind-Value="SelectedAlgorithm">
                <MatOptionString></MatOptionString>
                <MatOptionString Value="grains">Bread, Cereal, Rice, and Pasta</MatOptionString>
                <MatOptionString Value="vegetables">Vegetables</MatOptionString>
                <MatOptionString Value="fruit">Fruit</MatOptionString>
            </MatSelect>
        </td>

    </tr>
    <tr>
        <td>
            <MatSelect Outlined="true" FullWidth="true" Label="Data Series" @bind-Value="SelectedAlgorithm">
                <MatOptionString></MatOptionString>
                <MatOptionString Value="grains">Bread, Cereal, Rice, and Pasta</MatOptionString>
                <MatOptionString Value="vegetables">Vegetables</MatOptionString>
                <MatOptionString Value="fruit">Fruit</MatOptionString>
            </MatSelect>
        </td>
        <td>
            <MatSelect Outlined="true" FullWidth="true" Label="Type" @bind-Value="SelectedAlgorithm">
                <MatOptionString></MatOptionString>
                <MatOptionString Value="grains">Bread, Cereal, Rice, and Pasta</MatOptionString>
                <MatOptionString Value="vegetables">Vegetables</MatOptionString>
                <MatOptionString Value="fruit">Fruit</MatOptionString>
            </MatSelect>
        </td>
        <td>
            <MatNumericUpDownField Outlined="true" Label="Interval"
                                   @bind-Value=@Interval
                                   DecimalPlaces=0
                                   Minimum=1>
                                   
            </MatNumericUpDownField>
        </td>
    </tr>
    <tr>
        <td>
            
                <MatDatePicker Outlined="true" Label="Start Date" TValue="DateTime"></MatDatePicker>
        </td>
        <td>
            <MatDatePicker Outlined="true" Label="End Date" TValue="DateTime"></MatDatePicker>
        </td>
    </tr>
    <tr >
       
        <td class="runButton">

            Start
        </td>   
                </tr>

            </table>

